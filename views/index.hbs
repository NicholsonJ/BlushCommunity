<header class="headerPic text-center">
    <div class="header-container pt-auto mt-auto">
        <div class="title-text">
            <img src="/images/Blush.png" alt="Blush. A community for beauty trends" height="25%">
        </div>


        <div class="logincontainer">
            {{#if ifConnected}}
            <div class="hide-login">
                {{/if}}
            </div>
            <form action="/auth/login" method="POST" id="form-container">
                <label for="email"></label>
                <input id="email" type="text" name="email" placeholder="Email">

                <label for="password"></label>
                <input id="password" type="password" name="password" placeholder="Password">
                <br> {{#if message }}
                <div class="error-message">{{ message }}</div>
                {{/if}}

                <br><br>

                <button class="button"><span>Login</span></button>

                <h5 class="account-message blacktext">
                    Don't have an account yet?
                    <a href="/auth/signup">Signup</a>
                </h5>
            </form>

        </div>

    </div>
</header>

